{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "./@types",
    "importsNotUsedAsValues": "preserve",
    "lib": ["DOM", "esnext"],
    "moduleResolution": "node",
    "paths": {
      "@smooth-modal": ["./src/index.ts"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ],
    "sourceMap": true,
  },
  "include": ["src"]
}
